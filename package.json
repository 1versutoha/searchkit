{
  "name": "searchkit",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/searchkit/searchkit.git"
  },
  "scripts": {
    "versionup": "lerna version --conventional-commits --conventional-graduate --no-git-tag-version",
    "versionup:patch": "lerna version patch --conventional-commits --conventional-graduate --no-git-tag-version",
    "versionup:minor": "lerna version minor --conventional-commits --conventional-graduate --no-git-tag-version",
    "versionup:major": "lerna version major --conventional-commits --conventional-graduate --no-git-tag-version",
    "versionup:pre": "lerna version prerelease --conventional-commits --no-git-tag-version",
    "build": "lerna run build --stream --scope @searchkit/client && lerna run build --stream --scope '{@searchkit/apollo-resolvers,@searchkit/elastic-ui}'",
    "release": "lerna publish from-package",
    "test": "lerna run test --stream",
    "build-docs": "lerna run build-docs",
    "lint": "eslint . --ext js,ts,tsx --fix"
  },
  "devDependencies": {
    "@babel/core": "7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@graphql-codegen/cli": "1.15.0",
    "@graphql-codegen/fragment-matcher": "^1.15.0",
    "@graphql-codegen/introspection": "1.15.0",
    "@graphql-codegen/typescript": "1.15.0",
    "@graphql-codegen/typescript-operations": "1.15.0",
    "@graphql-codegen/typescript-react-apollo": "1.15.0",
    "@spotify/polly-jest-presets": "^3.1.0",
    "@types/elasticsearch": "^5.0.36",
    "@types/node": "^13.9.1",
    "@types/react": "^16.9.23",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.1.0",
    "express": "^4.17.1",
    "husky": "^3.0.8",
    "jest": "^26.0.1",
    "lodash": "^4.17.15",
    "nock": "^12.0.3",
    "prettier": "^1.19.1",
    "stylelint": "^11.0.0",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^3.1.0",
    "stylelint-prettier": "^1.1.1",
    "ts-jest": "^26.1.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  },
  "dependencies": {
    "lerna": "^3.22.0"
  }
}